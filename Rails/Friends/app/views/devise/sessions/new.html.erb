
<div class="container col-6">
  <div class="card">
    <div class="card-header">
      <h1>Log in</h1>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field form-group mb-2">
          <%= f.label :email, class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@domain.com" %>
        </div>

        <div class="field form-group mb-2">
          <%= f.label :password, class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "******" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="fiel form-group mb-2 form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="actions py-4">
          <%= f.submit "Log in", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>
