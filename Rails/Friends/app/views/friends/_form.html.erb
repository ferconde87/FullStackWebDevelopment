<%= form_with(model: friend, local: true) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group py-2 col-6">
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control", placeholder: "Adam" %>
  </div>

  <div class="field form-group py-2 col-6">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control", placeholder: "Smith" %>
  </div>

  <div class="field form-group py-2 col-6">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control", placeholder: "example@domain.com" %>
  </div>

  <div class="field form-group py-2 col-6">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, class: "form-control", placeholder: "111 222 3456" %>
  </div>

  <div class="field form-group py-2 col-6">
    <%= form.label :twitter, class: "form-label" %>
    <%= form.text_field :twitter, class: "form-control", placeholder: "my_twitter_handle" %>
  </div>

  <div class="field form-group py-2 col-6">
    <%= form.number_field :user_id, id: :friend_user_id, class: "form-control", value: current_user.id, type: :hidden %>
  </div>

  

  <div class="actions py-4">
    <%= form.submit class: "btn btn-success btn-lg" %>
  </div>
<% end %>
